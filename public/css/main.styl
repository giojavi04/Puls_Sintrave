azul = #22BCE0
@import url("http://fonts.googleapis.com/css?family=Open+Sans")
@import "fuentes.styl"

border-radius()
	-moz-border-radius arguments
	-ms-border-radius arguments
	-o-border-radius arguments
	-webkit-border-radius arguments
	border-radius arguments

body
	background #eee
	font-family 'Open Sans', sans-serif
	font-size 16px
	min-width 320px

h1, h2, h3, ul, p
	margin 0 
	padding 0

img
	width 100%

header
	background-color #444444
	border-bottom 5px solid #22bce0
	margin 0
	min-width 320px
	padding 10px 0
	position fixed
	overflow hidden
	text-align center
	width 100%
	z-index:2

	#header_logo, #header_titulo, #header_user
		display inline-block
		vertical-align middle

	#header_logo, #header_user
		height 55px
		width 55px

	#header_logo
		float left
		margin-left 20px

	#header_user
		border 3px solid #2d2d2d
		border-radius (40px)
		float right
		margin-right 10px
		overflow hidden

	#header_titulo
		width 50%
		a 
			color  azul
			text-decoration none

		a:hover
			color #ec1018

		h1
			color white
			font-weight bold
			font-size 1.1em
			margin 0 0 0.2em 0
			text-shadow 2px 2px 5px #333
			-moz-text-shadow 2px 2px 5px #333
			-ms-text-shadow 2px 2px 5px #333
			-o-text-shadow 2px 2px 5px #333
			-webkit-text-shadow 2px 2px 5px #333
		
		li 
			background rgba(255,0,0,0.5)
			border-radius (4px)
			display inline
			margin 0 0.4em 0 0
			padding 0.2em 0.3em
			transition 0.7s ease

		li:hover
			background rgba(0,200,255,0.8)


#contenido
	overflow hidden
	padding 100px 0 0 2.3%

	aside
		background-color azul
		border-radius (0px 0px 10px 10px)
		height 48px
		margin 0 2% 0 0
		overflow auto
		transition:height 0.3s ease;
		-moz-transition:height 0.3s ease;
		-ms-transition:height 0.3s ease;
		-o-transition:height 0.3s ease;
		-webkit-transition:height 0.3s ease;

		#aside_header
			border-bottom 3px solid #84E0EF
			height 35px
			padding 10px 0 0 0
			width 100%
			*
				display inline-block
				vertical-align middle
			span
				font-size 2em
				color #84E0EF
			h3
				color white
				float right
				font-weight normal
				margin-right 10px

		#aside_body
			p
				color white
				font-size 0.9em
				line-height 1.5em
				margin 2% 5%

				.input
					background azul
					border-bottom 1px solid #84E0EF
					border-color #84E0EF
					border-left transparent
					border-top transparent
					border-radius (0 0 30px 0)
					color white
					display block
					margin 0.2em 0 0.6em 6em
					width 50%	

				button
					background azul
					border-color red
					border-radius (2px 6px 2px 6px) 
					color white
					float auto
					margin 0.6em 0 0.7em 9em
					padding 1.2% 2%
					transition 0.8s ease all

				button:hover
					background red
					border-color azul

				textarea
					border 0px none
					background #84E0EF
					color #444
					display block
					margin 0.2em 0 0.6em 6em	

	aside:hover, aside:active
		height 210px

	.contenido_item
		background-color #EEE
		border 1px solid #efefef
		border-right 4px solid azul
		float left
		height 175px
		margin 1% 1% 0 0
		overflow hidden
		width 96%
		transition:border-color 0.3s;
		-moz-transition:border-color 0.3s;
		-ms-transition:border-color 0.3s;
		-o-transition:border-color 0.3s;
		-webkit-transition:border-color 0.3s;

		figure
			float left
			height 175px
			margin 0 0.2em 0 0
			width 155px

		.item_info
			height 140px
			overflow hidden
			padding 0 0 0 1.2em

			h2				
				color #333
				font-size 1.1em
				font-weight bold
				height auto
				margin 25px 0 0 0
				width auto

			.item_contenido
				margin 0 1.2em 0 0
				padding 0 
				overflow hidden
				text-align justify

			.item_posted
				color #7a7a7a
				font-size 0.8em
				margin 0.2em 0
				a
					color #ec1018
					text-decoration none

				a:hover
					color azul

			.icon-heart-2
				color #a5a5a5
				cursor pointer
				font-size 1.2em
				transition:color 0.5s;
				-moz-transition:color 0.5s;
				-ms-transition:color 0.5s;
				-o-transition:color 0.5s;
				-webkit-transition:color 0.5s;
			.icon-heart-2:hover
				color red

		.item_extra
			width 100%

			.extra_tag
				background-color azul
				border-radius (6px 2px 6px 2px)
				color white
				float left
				font-size 0.9em
				margin 0 0 0 1.2em
				padding 0.1em 0.5em

			.extra_likes
				float right
				margin 0 5px 0 0
				position relative
				top -6px

				*
					display inline
					vertical-align middle

				a
					text-decoration none
					font-size 1.5em

					.icon-arrow-up
						color #666
						position relative
						transition:top 0.3s ease;
						-moz-transition:top 0.3s ease;
						-ms-transition:top 0.3s ease;
						-o-transition:top 0.3s ease;
						-webkit-transition:top 0.3s ease;

					.icon-arrow-up:hover
						top -4px
						color azul

					.icon-arrow-down
						color #666
						position relative
						transition:top 0.3s;
						-moz-transition:top 0.3s ease;
						-ms-transition:top 0.3s ease;
						-o-transition:top 0.3s ease;
						-webkit-transition:top 0.3s ease;

					.icon-arrow-down:hover
						top 4px
						color red

				.likes_numero
					color #a6a6a6

	.contenido_item:hover
		border-color #22bce0

	.contenido_item.extended
		color #333
		height auto
		width 95%
		img
			box-shadow: 5px 5px 10px #333
		
		.item_info 
			height auto

			.item_contenido
				margin 0 2em 0 0
				padding 0 
				text-align justify

		.item_extra 
			display inline-block
			.extra_tag
				float right
				margin 0 2em 0 0

			.extra_likes
				float right
				margin 0 2em 0 0

@import "responsive.styl"